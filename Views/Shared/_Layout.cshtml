            <!-- #endregion -->

            <nav class='animated bounceInDown custom-nav'>
                <ul>
                    <li><a href="@Url.Action("Index","Home")">Dashboard</a></li>
                    <li class='sub-menu'>
                        <a href="#">User Management<div class='fa fa-caret-down right'></div></a>
                        <ul>
                            <li><a href="@Url.Action("Index","Users")">Users List</a></li>
                            <li><a href="@Url.Action("AddNewUser","Users")">Add New User</a></li>
                            <li><a href="@Url.Action("UserRoles","Users")">User Roles</a></li>
                        </ul>
                    </li>
                    <li class='sub-menu'>
                        <a href="#">Document Management<div class='fa fa-caret-down right'></div></a>
                        <ul>
                            <li><a href="@Url.Action("Index","Files")">Documents List</a></li>
                            <li><a href="@Url.Action("AddNewFile","Files")">Add New Document</a></li>
                            <li><a href="@Url.Action("DocumentTypes","Files")">Document Types</a></li>
                            <li><a href="@Url.Action("Departments","Files")">Departments</a></li>
                        </ul>
                    </li>
                </ul>
            </nav>
        </div>
        <div class="sidenav-footer mx-3 ">
            <a class="btn btn-primary btn-sm mb-0 w-100" href="@Url.Action("Logout","Users")" type="button">Logout</a>
        </div>
    </aside>
    <main class="main-content position-relative border-radius-lg ">
        <!-- Navbar -->
        <nav class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl " id="navbarBlur" data-scroll="false">
            <div class="container-fluid py-1 px-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 me-5" hidden>
                        <li class="breadcrumb-item text-sm"><a class="opacity-5 text-white" href="javascript:;">Pages</a></li>
                        <li class="breadcrumb-item text-sm text-white active" aria-current="page">Dashboard</li>
                    </ol>
                    <h6 class="font-weight-bolder text-white mb-0">@ViewData["Title"]</h6>
                </nav>
                <div class="collapse navbar-collapse mt-sm-0 mt-2 me-md-0 me-sm-4 justify-content-end" id="navbar">
                    <ul class="navbar-nav justify-content-end text-right">
                        <li class="nav-item d-flex align-items-center">
                            <a href="javascript:;" class="nav-link text-white font-weight-bold px-0">
                                <i class="fa fa-user me-sm-1"></i>
                                <span class="d-sm-inline d-none">@HttpContextAccessor.HttpContext.Session.GetString("Name").ToString()</span>
